---
import Layout from "../../layouts/Layout.astro";
import BackButton from "../../components/buttons/BackButton.astro";
import { getPhotosUrl } from "../../services/api-photos";
import Gallery from "../../components/gallery/Gallery";

const photos = await getPhotosUrl("spacex");
---

<Layout title={`Gallery`}>
  <div class="flex flex-col justify-center items-center ">
    <div class="w-fit">
      <BackButton />
    </div>
    <h1 class="text-white text-7xl text-center mb-12">Gallery SpaceX</h1>
  </div>
  <Gallery images={photos} client:idle />
</Layout>
