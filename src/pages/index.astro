---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/navigation/Navigation.astro";
import Footer from "../components/footer/Footer.astro";
import { getCompany } from "../services/api";
import { getPhotosUrl } from "../services/api-photos";

const company = await getCompany();

const photos = await getPhotosUrl("spacex");
---

<Layout title="SpaceXmirror">
  <div class="flex flex-col justify-between h-screen">
    <svg
      class="astro-a"
      width="495"
      height="623"
      viewBox="0 0 495 623"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <!-- ... Tu SVG aquÃ­ ... -->
    </svg>
    <div class="md:flex md:justify-around md:items-center text-white">
      <h1
        class="text-4xl text-center px-6 md:w-1/3 md:text-4xl lg:text-5xl ml-0 lg:ml-20 font-semibold"
      >
        Welcome to <span class="text-gradient">SpaceXMirror!</span>
      </h1>
      <div class="md:w-2/3 lg:p-20 flex flex-col justify-center">
        <p
          class="text-lg p-4 text-center md:text-start md:p-10 lg:text-xl text-slate-300"
        >
          {company.summary}
        </p>

        <div class="flex justify-around gap-5">
<!--           <a
            href="/next-launches"
            rel="noopener noreferrer"
            class="w-fit bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 hover:from-pink-500 hover:via-purple-500 hover:to-red-400 text-white font-bold hover:scale-105 py-2 px-4 rounded-full"
          >
            Next Launch
          </a> -->
          <a
            href="/gallery"
            rel="noopener noreferrer"
            class="w-fit bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 hover:from-pink-500 hover:via-purple-500 hover:to-red-400 text-white font-bold hover:scale-105 py-2 px-4 rounded-full"
          >
            Visit Gallery
          </a>
<!--           <a
            href="/upcoming-launches"
            rel="noopener noreferrer"
            class="w-fit bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 hover:from-pink-500 hover:via-purple-500 hover:to-red-400 text-white font-bold hover:scale-105 py-2 px-4 rounded-full"
          >
            Upcoming Launches
          </a> -->
        </div>
      </div>
    </div>

    <div
      class="flex flex-col justify-center items-center text-center gap-5 md:text-start  md:flex-row md:justify-around md:items-start text-slate-300"
    >
      <div class="justify-self-center">
        <h2 class="text-2xl font-semibold text-white">- Company Info</h2>
        <ul class="list-disc pl-5 list-inside text-lg">
          <li>
            <span class="font-semibold text-white">Founder: {" "}</span>
            {company.founder} ({company.founded})
          </li>
          <li>
            <span class="font-semibold text-white">Employees: {" "}</span>
            {company.employees}
          </li>
          <li>
            <span class="font-semibold text-white">Vehicles: {" "}</span>
            {company.vehicles}
          </li>
          <li>
            <span class="font-semibold text-white">Launch Sites: {" "}</span>
            {company.launch_sites}
          </li>
          <li>
            <span class="font-semibold text-white">Test Sites: {" "}</span>
            {company.test_sites}
          </li>
          <li>
            <span class="font-semibold text-white">Valuation: {" "}</span> ${
              company.valuation
            }
             billion
          </li>
        </ul>
      </div>
      <div class="justify-self-center">
        <h2 class="text-2xl font-semibold text-white">- Leadership</h2>
        <ul class="list-disc pl-5 list-inside text-lg">
          <li>
            <span class="font-semibold text-white">CEO: {" "}</span>
            {company.ceo}
          </li>
          <li>
            <span class="font-semibold text-white">CTO: {" "}</span>
            {company.cto}
          </li>
          <li>
            <span class="font-semibold text-white">COO: {" "}</span>
            {company.coo}
          </li>
          <li>
            <span class="font-semibold text-white">CTO Propulsion: {" "}</span>
            {company.cto_propulsion}
          </li>
        </ul>
      </div>
      <div class="justify-self-center">
        <h2 class="text-2xl font-semibold text-white">- Headquarters</h2>

        <p>
          <span class="font-semibold text-white">Address: {" "}</span>
          {company.headquarters.address}
        </p>
        <p>
          <span class="font-semibold text-white">City: {" "}</span>
          {company.headquarters.city}
        </p>
        <p>
          <span class="font-semibold text-white">State: {" "}</span>
          {company.headquarters.state}
        </p>
      </div>
    </div>
    <Navigation />
    <Footer links={company.links} />
  </div>
</Layout>

<style>
  main {
    width: 100vh;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translateX(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-violet-white);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
