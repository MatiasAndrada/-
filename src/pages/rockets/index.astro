---
import Layout from "../../layouts/Layout.astro";
import RocketList from "../../components/list/RocketList.astro";
import { getRockets } from "../../services/api.ts";
import BackButton from "../../components/buttons/BackButton.astro";
const rockets = await getRockets();
---

<Layout title="Rockets">
  <div
    class="bg-gradient py-8"
  >
    <div class="container w-2/3 mx-auto text-start">
      <BackButton />
      <h1 class="mt-4 text-4xl font-bold text-white">Rockets</h1>
      <p class="mt-4 first-letter:text-lg text-slate-300">
        Here you can find all the rockets.
      </p>
    </div>
  </div>
  <div class="mt-4">
    <RocketList list={rockets}/>
  </div>
</Layout>
<!-- -to-r from-orange-700 via-orange-950 to-orange-5500 -->

<style>
  .bg-gradient{
    background-image: var(--accent-orange-black);
  }
</style>