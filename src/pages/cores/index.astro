---
import Layout from "../../layouts/Layout.astro";
import CoreList from "../../components/list/CoreList.astro";
import { getCores } from "../../services/api.ts";
import BackButton from "../../components/buttons/BackButton.astro";
const Cores = await getCores();
---

<Layout title="Cores">
  <div class="bg-gradient py-8">
    <div class="container w-2/3 mx-auto text-start">
      <BackButton />
      <h1 class="mt-4 text-4xl font-bold text-white">Cores</h1>
      <p class="mt-4 first-letter:text-lg text-slate-300">
        Here you can find all the Cores.
      </p>
    </div>
  </div>
  <div class="mt-4">
  <CoreList list={Cores} />
  <div class="mt-4">
</Layout>
<!-- -to-r from-green-700 via-green-950 to-green-5500  -->

<style>
  .bg-gradient{
    background-image: var(--accent-green-black);
  }
</style>