---
import Layout from "../../layouts/Layout.astro";
import BackButton from "../../components/buttons/BackButton.astro";
import LaunchList from "../../components/list/LaunchList.astro";
import LaunchListSkeleton from "../../components/list/LaunchList.astro";
//import LaunchList from "../../components/skeletons/LaunchList.astro";
---

<Layout title="Launches">
  <div class="bg-gradient py-8">
    <div class="container mx-auto text-start">
      <BackButton />
      <h1 class="mt-4 text-4xl font-bold text-white">Launches</h1>
      <p class="mt-4 first-letter:text-lg text-slate-300">
        Here you can find all the launches.
      </p>
    </div>
  </div>
  <div class="mt-4">
    {/* <LaunchesList client:idle />*/}
    <LaunchList />
  </div>
</Layout>

<style>
  .bg-gradient {
    background-image: var(--accent-blue-black);
  }
</style>
