---
import { type NavigationItem } from "../../types/navigation";

const { name, path } = Astro.props;
---

<li class="link-card text-white">
  <a href={path} class="glass-effect">
    <h2>
      {name}
      <span class="icon">&rarr;</span>
    </h2>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    border-radius: 7px;

    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
  }
  h2 {
    margin: 0;
    font-weight: 400;
    color: white;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  span {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-violet-white);
  }
  .link-card:is(:hover, :focus-within) h2 {
    font-weight: 600;
  }
  /* Estilos para el efecto de vidrio */
  .glass-effect {
    backdrop-filter: blur(10px); /* Ajusta la intensidad del desenfoque aqu√≠ */
    background-color: #985afd94;
    transition: background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
</style>
