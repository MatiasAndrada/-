---
interface Props {
  id: string;
  serial: string;
  last_update: string;
  status: string;
}

const { id, serial, last_update, status } = Astro.props;

let statusClass = "bg-gray-500";
if (status === "active") {
  statusClass = "bg-green-500";
} else if (status === "destroyed") {
  statusClass = "bg-red-500";
} else if (status === "retired") {
  statusClass = "bg-yellow-500";
} else if (status === "lost") {
  statusClass = "bg-red-500";
} else if (status === "inactive") {
  statusClass = "bg-gray-500";
} else if (status === "unknown") {
  statusClass = "bg-orange-500";
}
---a

<li class="link-card">
  <a href={`/capsules/${id}`} class="card-link">
    <div>
      <h2 class="text-xl m-2 text-white">{serial}</h2>
      <p class="text-lg ml-2 w-2/3 text-slate-300">{last_update}</p>
    </div>
    <div class="status">
      <p class={`text-lg p-2 rounded-md text-white ${statusClass}`}>
        {status}
      </p>
    </div>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    width: 25%;
    height: fit-content;
    padding: 15px;
    margin: 4px;
    background-color: #334155;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(21, 20, 20, 0.538);
  }

  .card-link {
    text-decoration: none;
    position: relative;
    display: block;
    border-radius: 7px;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-image {
    width: 100%;
    object-fit: cover;
  }

  .status-text {
    background-color: rgb(0, 2, 128);
    color: white;
    border-radius: 50px;
    display: inline-block;
    padding: 6px 12px;
    font-size: 18px;
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-violet-white);
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: var(--accent-violet);
  }
  
  @media (max-width: 768px) {
    .link-card {
      width: 45%; /* Ajusta el ancho de la tarjeta para dispositivos medianos */
    }
  }
  @media (max-width: 480px) {
    .link-card {
      width: 100%; /* Ocupa todo el ancho en dispositivos peque√±os */
    }
    .status{
      bottom: 0;
      right: 10px;
      top: 10px;
      padding: 4px, 8px;
    }
  }
</style>
